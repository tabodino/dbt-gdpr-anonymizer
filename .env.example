# ============================================
# ENVIRONNEMENT
# ============================================

# Environment : development, staging, production
ENVIRONMENT=development

# Enable debug mode
DEBUG=false

# ============================================
# LOGGING
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

LOG_PATH=./dbt_project/logs/app.log

LOG_MAX_SIZE=10

LOG_BACKUP_COUNT=5

LOG_FORMAT=json

# ============================================
# API DATA.GOUV.FR
# ============================================

DATAGOUV_API_URL=https://www.data.gouv.fr/api/1

DATAGOUV_DATASET_ID=annuaire-des-services-publics-nationaux

DATAGOUV_HTTP_TIMEOUT=30

DATAGOUV_HTTP_RETRIES=3

# ============================================
# DATABASE
# ============================================

DUCKDB_PATH=./dbt_project/gdpr_anonymizer.duckdb

DUCKDB_DEBUG=false

# ============================================
# DBT CONFIGURATION
# ============================================

DBT_PROFILE=gdpr_anonymizer

DBT_TARGET=dev

# Threads for parallel execution
DBT_THREADS=4

# Salting key for SHAâ€‘256 hashing
# IMPORTANT: Generate a unique key and protect it like a password
# Command to generate it: python -c \"import secrets; print(secrets.token_urlsafe(64))\
DBT_ANONYMIZATION_SALT=CHANGE_ME_TO_A_SECURE_RANDOM_VALUE
